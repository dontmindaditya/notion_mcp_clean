{
  "name": "notion-mcp-integration",
  "version": "1.0.0",
  "private": true,
  "description": "Notion MCP Integration - Monorepo with Next.js frontend and Express backend",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:web\"",
    "dev:server": "npm run dev --workspace=apps/server",
    "dev:web": "npm run dev --workspace=apps/web",
    "build": "npm run build --workspace=apps/server && npm run build --workspace=apps/web",
    "start": "npm run start --workspace=apps/server",
    "start:web": "npm run start --workspace=apps/web",
    "migrate": "npm run migrate --workspace=apps/server",
    "seed": "npm run seed --workspace=apps/server",
    "lint": "npm run lint --workspace=apps/server",
    "test": "npm run test --workspace=apps/server",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f"
  },
  "workspaces": [
    "apps/*"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}