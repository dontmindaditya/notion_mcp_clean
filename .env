# ─── Notion OAuth ───────────────────────────────────────
NOTION_CLIENT_ID=your_notion_client_id
NOTION_CLIENT_SECRET=your_notion_client_secret
NOTION_REDIRECT_URI=http://localhost:3000/callback

# ─── MCP Server ─────────────────────────────────────────
MCP_SERVER_URL=https://mcp.notion.com

# ─── Database (matches docker-compose.yml) ──────────────
DATABASE_URL=postgresql://notion_user:notion_pass@localhost:5432/notion_mcp

# ─── Redis (matches docker-compose.yml) ─────────────────
REDIS_URL=redis://localhost:6379

# ─── Security ──────────────────────────────────────────
# 32 bytes, base64 encoded. Generate with:
#   node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
TOKEN_ENCRYPTION_KEY=AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA=

# Minimum 64 chars of random entropy
SESSION_SECRET=change-me-to-a-random-64-plus-character-secret-for-production-use-only

# ─── Application ────────────────────────────────────────
APP_URL=http://localhost:3000
NODE_ENV=development
PORT=4000
LOG_LEVEL=debug

# ─── Rate Limiting ──────────────────────────────────────
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
